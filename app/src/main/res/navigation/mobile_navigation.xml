        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="org.aldomanco.coronameters.view.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_report"
        android:name="org.aldomanco.coronameters.view.ui.report.ReportFragment"
        android:label="@string/title_report"
