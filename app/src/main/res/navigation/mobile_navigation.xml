    <fragment
        android:id="@+id/navigation_italy_stats"
        android:name="org.aldomanco.coronameters.view.ui.italy.ItalyStatsFragment"
        android:label="@string/title_italy_stats"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_world_stats"
        android:name="org.aldomanco.coronameters.view.ui.world.WorldStatsFragment"
